             x:Class="WSR_Laboratory_Mobile.View.MainPage" Title="Лаборатория №20">

    <StackLayout>
        <StackLayout Orientation="Vertical">
            <Button Text="Новости" x:Name="NewsBtn" Clicked="NewsBtn_Clicked"/>
            <Button Text="Услуги" x:Name="ServiceBtn" Clicked="ServiceBtn_Clicked"/>
            <Button Text="Авторизация" IsVisible="false" x:Name="AuthBtn" Clicked="AuthBtn_Clicked"/>
            <Button Text="Профиль" IsVisible="false"  x:Name="UserBtn" Clicked="UserBtn_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
